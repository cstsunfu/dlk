{
    "root": {
        "_name": "crf_lstm",
        "_link": {"config.meta_data": ['task.imodel.model.config.embedding_file', 'task.imodel.postprocessor.config.meta']},
        "_search": {},
        "config": {
            /*"save_dir": "output/benchmark",  # must provide*/
            /*"data_path": "output/benchmark/processed_data.pkl",  # must provide*/
            /*"meta_data": "output/benchmark/meta.pkl",  # must provide*/
            "save_dir": "./examples/sequence_labeling/conll2003/norm_lstm_crf/output",  # must provide
            "data_path": "./examples/sequence_labeling/conll2003/norm_lstm_crf/output/processed_data.pkl",  # must provide
            "meta_data": "./examples/sequence_labeling/conll2003/norm_lstm_crf/output/meta.pkl",  # must provide
        },
        "task": {
            "manager": {
                "_base": "lightning@advance",
                "config":{
                    "max_epochs": 50,
                    "_search": {"max_epochs": [60]},
                    "gpus": 1
                }
            },
            "imodel": {
                "_base": "basic@seq_lab#crf",
                "model": {
                    "_base": "basic@seq_lab#lstm_crf",
                    "config": {
                        "embedding_dim": 100,
                        "lstm_output_size": 200,
                        "dropout": 0.5,
                        "_search": {"dropout": [0.5], "lstm_output_size": [200]},
                        "embedding_file": "*@*",
                        "label_num": 9,
                    },
                },
                "scheduler": {
                    "_base": "rec_decay",
                    /*"config": {*/
                        /*"num_warmup_steps": 0.1,*/
                    /*}*/
                },
                "optimizer": {
                    "_base": "sgd",
                    "config": {
                        "lr": 2e-2,
                        "weight_decay": 0,
                        "_search": {"lr": [1e-2, 1.5e-2]},
                        "momentum": 0.9,
                    },
                },
                "postprocessor": {
                    "config": {
                        "meta": '*@*',
                        "start_save_epoch": 50,
                        "save_root_path": "./examples/sequence_labeling/conll2003/norm_lstm_crf/"
                    }
                },
            },
            "datamodule": {
                "_base": "basic@seq_lab",
                "config":{
                   "train_batch_size": 10,
                   /*"_search": {"train_batch_size": [2, 4, 8]},*/
                   "_search": {"train_batch_size": [10]},
                   "predict_batch_size": 128, //predict„ÄÅtest batch_size is equals to valid_batch_size
                }
            },
        },
    },
    "_focus": {
        "root._name": "task=",
        /*"root.task.imodel.optimizer.config.momentum": "momentum=",*/
        "root.task.imodel.model.config.dropout": "dropout=",
        "root.task.imodel.optimizer.config.lr": "lr=",
        "root.task.imodel.optimizer._name": "optimizer=",
        /*"root.task.imodel.optimizer.config.momentum": "momentum.",*/
        "root.task.datamodule.config.train_batch_size": "batch_size=",
        "root.task.imodel.model.config.lstm_output_size": "lstm_output_size=",
    },
}
